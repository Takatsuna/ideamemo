<h1>アイデアリスト</h1>

<table>
  <thead>
    <tr>
      <th>アイデア名</th>
      <th>説明</th>
      <th>写真</th>
      <th>場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url,width:100) if idea.picture.present? %></td>
        <td><%= idea.place %></td>
        <td><%= link_to '見る', idea %></td>
        <td><%= link_to '編集する', edit_idea_path(idea) %></td>
        <td><%= link_to '削除する', idea, method: :delete, data: { confirm: '本当に削除してもよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規追加', new_idea_path %>
